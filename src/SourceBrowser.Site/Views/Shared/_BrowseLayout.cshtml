<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Source Browser</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <header class="sourcebrowser-header" data-load="header.html">
        <nav class="navigation-bar-content">
            <a href="/" class="title-element">
                <div class="logo"></div>
                <div class="title">SOURCE BROWSER <sup>0.2</sup></div>
            </a>
            <a class="element visible-on-wide-screen after-divider" href="/Browse/">Browse</a>
            <a class="element visible-on-wide-screen" href="/Upload/">Upload</a>
            <div class="input-element place-right" id="search-form">
                <div class="input-control text">
                    <input type="text" id="search-box" placeholder="Search...">
                    <button id="search-button"></button>
                </div>
            </div>
        </nav>
    </header>
    
    @RenderBody()

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/search")
    @*Scripts.Render("~/bundles/sourcebrowser")*@
    @RenderSection("scripts", required: false)
    
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-58766117-1', 'auto');
      ga('send', 'pageview');
    </script>
</body>
</html>
